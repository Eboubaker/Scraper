{
  "main": "src/scrap.php",
  "output": "releases/scrap.phar",
  "directories": [
    "src"
  ],
  "finder": [
    {
      "in": "src",
      "exclude": [
        "tests"
      ]
    },
    {
      "in": "vendor",
      "name": "LICENCE*"
    },
    {
      "name": "*.php",
      "exclude": [
        "test",
        "tests"
      ],
      "in": "vendor"
    }
  ],
  "check-requirements": false
}
